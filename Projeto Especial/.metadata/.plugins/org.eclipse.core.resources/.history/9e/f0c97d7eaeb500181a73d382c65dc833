<script>
	$(document)
			.ready(
					function() {

						var myToken;
						if (localStorage.token == null) {
							myToken = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiYWRtaW4iOnRydWV9.TJVA95OrM7E2cBab30RMHrHDcEfxjoYZgeFONFh7HgQ";
						} else {
							myToken = localStorage.token;
						}

						$("#btnaddEx")
								.click(
										function() {
											$
													.ajax(
															{
																method : "POST",
																url : "http://localhost:8080/CODEX/rest/exercicios",
																data : {
																	titulo : $(
																			"#tituloEx")
																			.val(),
																	exercicio : $(
																			"#descricaoEx")
																			.val(),
																	linguagem : $(
																			"#linguagemEx")
																			.val(),
																	dificuldade : $(
																			"#dificuldadeEx")
																			.val(),
																	tags : $(
																			"#tagSnippet")
																			.val(),
																	input : $(
																			"#inputEx")
																			.val(),
																	output : $(
																			"#outputEx")
																			.val(),
																	token : myToken
																}
															})
													.done(
															function(msg) {
																console
																		.log("Token: "
																				+ msg)
																localStorage
																		.setItem(
																				"token",
																				msg);
																alert("Snippet Criado!");															});
										});

					});
</script>

